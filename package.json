{
  "name": "terrario",
  "version": "0.10.0-dev.3",
  "description": "A refined, expressive parser combinator library.",
  "license": "MIT",
  "author": "Marihachi",
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/terrario.d.ts",
  "contributors": [
    "ThinaticSystem <git@thinaticsystem.com> (https://thinaticsystem.com/)"
  ],
  "keywords": [
    "parser",
    "parser-combinators",
    "parsing",
    "javascript",
    "typescript",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marihachi/terrario.git"
  },
  "scripts": {
    "build": "mkdir ./dist && npm run build:tsc && npm run build:copy && npm run build:types",
    "build:tsc": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json && cp -r ./template/esm/ ./dist/esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && cp -r ./template/cjs/ ./dist/cjs",
    "build:copy": "cd ./build && copy ./**/*.js ../dist",
    "build:types": "api-extractor run --local --verbose",
    "test": "jest --verbose",
    "typedoc": "typedoc --plugin typedoc-plugin-markdown --out temp/docs src/index.ts",
    "api-init": "api-extractor init"
  },
  "exports": {
    ".": {
      "types": "./dist/terrario.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.36.3",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.2",
    "copy": "0.3.2",
    "jest": "29.6.1",
    "ts-jest": "29.1.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "5.1.6"
  },
  "files": [
    "dist/**/*",
    "CHANGELOG.md"
  ]
}
