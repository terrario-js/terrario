{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node16",
    "declaration": true,
    "rootDir": "./src/",
    "skipLibCheck": true,
    "removeComments": false,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
  ]
}
